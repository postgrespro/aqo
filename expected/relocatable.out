CREATE EXTENSION aqo;
SET aqo.join_threshold = 0;
SET aqo.mode = 'learn'; -- use this mode for unconditional learning
CREATE TABLE test AS (SELECT id, 'payload' || id FROM generate_series(1,100) id);
ANALYZE test;
-- Learn on a query
SELECT count(*) FROM test;
 count 
-------
   100
(1 row)

